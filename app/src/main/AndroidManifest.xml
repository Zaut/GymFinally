<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diploma2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Diploma2">

        <activity
            android:name=".Roseltat"
            android:label="@string/title_activity_roseltat"
            android:theme="@style/Theme.Diploma2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.Roseltat" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExerciseActivity">
            <intent-filter>
                <action android:name="android.intent.action.ExerciseActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Info"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.Diploma2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.Info" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FoodActivity"
            android:label="@string/title_activity_food"
            android:theme="@style/Theme.Diploma2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.Food" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".muscle_groups"
            android:label="@string/title_activity_muscle_groups"
            android:theme="@style/Theme.Diploma2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.muscle_groups" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calculator"
            android:label="@string/title_activity_calculator"
            android:theme="@style/Theme.Diploma2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.Calculator" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>